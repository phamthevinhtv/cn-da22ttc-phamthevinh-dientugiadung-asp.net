@{
    var breadcrumb = ViewData["Breadcrumb"] as List<(string Text, string Url)>;
    string title = "VElectric";

    if (breadcrumb != null && breadcrumb.Count > 0)
    {
        title = breadcrumb[breadcrumb.Count - 1].Text;
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @await Html.PartialAsync("_Header")

    <div id="content">
        @if ((bool?)ViewData["HideSidebar"] != true)
        {
            @if (ViewData["SidebarType"] as string == "PartialView")
            {
                @await Html.PartialAsync(ViewData["SidebarName"] as string);
            } else if (ViewData["SidebarType"] as string == "ViewComponent") {
                @await Component.InvokeAsync(ViewData["SidebarName"] as string ?? "")
            }
        }
        
        <main id="main">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_Footer")
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

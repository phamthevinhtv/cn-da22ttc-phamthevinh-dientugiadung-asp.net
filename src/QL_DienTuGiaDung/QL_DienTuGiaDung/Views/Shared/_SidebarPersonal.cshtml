<aside id="sidebar">
    <h3 class="sidebar-heading">Cá nhân</h3>
    <ul class="sidebar-list">
        <li class="sidebar-list-item">
            <a asp-controller="Account" asp-action="Personal" class="sidebar-list-link">Thông tin cá nhân</a>
        </li>
        <li class="sidebar-list-item">
            <a asp-controller="Account" asp-action="History"  class="sidebar-list-link">Lịch sử mua hàng</a>
        </li>
